{
  "name": "smspro",
  "private": true,
  "version": "0.1.0",
  "description": "SMSPro monorepo scaffold",
  "workspaces": [
    "backend/*",
    "frontend/*",
    "shared/*"
  ],
  "scripts": {
    "dev": "node scripts/dev.js",
    "build": "npm run lint:contracts && npm run check:schema",
    "typecheck": "npm run lint:contracts",
    "test": "npm run check:schema",
    "test:smoke": "node scripts/test-smoke.js",
    "lint:contracts": "ruby -e 'require \"yaml\"; YAML.load_file(\"backend/contracts/phase1/openapi.yaml\"); puts \"openapi ok\"'",
    "check:schema": "test -f backend/database/migrations/0001_baseline.sql && echo 'baseline schema present'",
    "db:up": "docker compose up -d db",
    "db:down": "docker compose down",
    "db:reset": "./scripts/db-reset.sh",
    "db:seed": "./scripts/db-seed.sh"
  }
}
